<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<link rel = 'stylesheet' href='/stylesheets/style.css' />
<img class = "partsBackground" src ="https://t3.ftcdn.net/jpg/06/42/15/52/360_F_642155259_wkEIRRSocT0VH4W8E7lneTiywgwJcvFc.jpg">
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text" class="form-control" id="descriptionTextField" placeholder="Enter the description" name="description" required>
                </div>
                <div class="form-group">
                    <label for="itemTextField">Item</label>
                    <input type="text" class="form-control" id="itemTextField" placeholder="Enter the Item name" name="item" required>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Enter the Price" name="price" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                    <i class="fas fa-edit"></i>
                </button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i>
                </button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>