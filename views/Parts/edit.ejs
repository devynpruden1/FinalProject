<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text" class="form-control" id="descriptionTextField" placeholder="Enter the Description" name="description" value="<%= description %>" required>
                </div>
                <div class="form-group">
                    <label for="itemTextField">Book Author</label>
                    <input type="text" class="form-control" id="itemTextField" placeholder="Enter the Item name" name="item" value="<%= item %>" required>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Book Genre</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Enter the price" name="price" value="<%= price %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>