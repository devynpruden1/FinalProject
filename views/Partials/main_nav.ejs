          <li class="nav-item">
            <a class="nav-link" href="/register">
              <i class="fa-solid fa-user-plus"></i> Register
            </a>
          </li>
        <% } else { %> <!-- Show when user IS logged in -->
          <li class="nav-item">
            <span class="nav-link text-light">Mechanic: <%= user.displayName || user.username %></span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">
              <i class="fa-solid fa-right-from-bracket"></i> Logout
            </a>
