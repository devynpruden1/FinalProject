            <a class="nav-link" href="/stock">
          <% } %>
            <i class="fa-brands fa-elementor"></i> Product
          </a>
        </li>

        <!-- Conditional Login, Logout, and Register -->
        <% if (!user) { %> <!-- Show when user is NOT logged in -->
          <li class="nav-item">
            <a class="nav-link" href="/login">
              <i class="fa-solid fa-right-to-bracket"></i> Login
            </a>
