<%- include('Partials/header') %>
<%- include('Partials/main_nav') %>
<img class = "partsBackground" src ="https://t3.ftcdn.net/jpg/06/42/15/52/360_F_642155259_wkEIRRSocT0VH4W8E7lneTiywgwJcvFc.jpg">
<div class="container mt-4">
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Anton+SC&family=Oswald:wght@200..700&family=Playwrite+DE+Grund:wght@100..400&display=swap" rel="stylesheet">
  <link rel = 'stylesheet' href='/stylesheets/style.css' />
  <h1 class = stockTitle>Stock List</h1>

  <% if (user) { %> <!-- Add button visible only for logged-in users -->
    <a href="/stock/add" class="btn btn-primary" role="button">Add Stock</a>
  <% } %>

  <table class="table table-bordered table-striped table-dark">
    <thead>
      <tr>
        <th>Description</th>
        <th>Item</th>
        <th>Price</th>
        <% if (user) { %> <!-- Actions column visible only for logged-in users -->
          <th>Actions</th>
        <% } %>
      </tr>
    </thead>
    <tbody>
      <% stockItems.forEach(stock => { %> <!-- Loop through stockItems array -->
        <tr>
          <td><%= stock.description %></td>
          <td><%= stock.item %></td>
          <td><%= stock.price %></td>
          <% if (user) { %> <!-- Edit/Delete buttons visible only for logged-in users -->
            <td>
              <a href="/stock/edit/<%= stock._id %>" class="btn btn-primary">Edit</a>
              <a href="/stock/delete/<%= stock._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
            </td>
          <% } %>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('Partials/footer') %>
