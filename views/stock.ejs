<!-- views/stock.ejs -->
<%- include('Partials/header') %>
<%- include('Partials/main_nav') %>

<div class="container mt-4">
  <h1>Stock List</h1>
  <a href="/stock/add" class="btn btn-primary" role="button">Add Stock</a>
  
  <table class="table table-bordered mt-3">
    <thead>
      <tr>
        <th>Description</th>
        <th>Item</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% stockItems.forEach(stock => { %> <!-- Loop through stockItems array -->
        <tr>
          <td><%= stock.description %></td>
          <td><%= stock.item %></td>
          <td><%= stock.price %></td>
          <td>
            <!-- Edit button -->
            <a href="/stock/edit/<%= stock._id %>" class="btn btn-primary">Edit</a>
            
            <!-- Delete button -->
            <a href="/stock/delete/<%= stock._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('Partials/footer') %>
